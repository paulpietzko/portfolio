---
import Container from "../layouts/Container.astro";
import SubTitle from "./SubTitle.astro";
import ProjectCard from "./ProjectCard.astro";
---

<div class="mb-[5rem] overflow-x-hidden">
  <Container size="xl">
    <SubTitle
      title="Projects I worked on"
      text="Here are some of the projects I worked on in the past."
    />
  </Container>

  <section class="flex justify-between my-[5rem]">

    <!-- Left Card -->
    <ProjectCard
      link="https://www.nanosights.dev"
      imgSrc="/images/nanosights.png"
      imgAlt="NanoSights"
      title="NanoSights Saas"
      description="A developer-friendly platform for embedding lightweight analytics, SEO, speed insights, and revenue tracking into your applications."
      extraClasses="rotate-12 -ml-8"
    />

    <!-- Center Card -->
    <ProjectCard
      link="https://2sxc.org/en/"
      imgSrc="/images/2sxc.png"
      imgAlt="2sxc"
      title="2sxc CMS"
      description="2sxc is revolutionizing content management on DNN and Oqtane with the 1-second-paradigm. Every interaction takes less than 1 second."
      extraClasses="-rotate-12"
    />

    <!-- Right Card -->
    <ProjectCard
      link="https://school-sys.org/en/"
      imgSrc="/images/school-sys.png"
      imgAlt="SchoolSys"
      title="Swiss School System"
      description="We believe that every child should have the opportunity to excel. As such, we have developed a system to help daycares in Arusha (Tanzania) and Cape Town (South Africa) teach children using modern methods to empower young children."
      extraClasses="rotate-12 -mr-8"
    />
  </section>
</div>