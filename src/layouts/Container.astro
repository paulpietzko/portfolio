---
const { size } = Astro.props as { size: "sm" | "md" | "lg" | "xl" };

const sizeClasses = {
  sm: "max-w-4xl",
  md: "max-w-5xl",
  lg: "max-w-6xl",
  xl: "max-w-7xl",
};

const maxWidthClass = sizeClasses[size] || "max-w-full";
---

<div class={`container mx-auto my-4 px-4 ${maxWidthClass}`}>
  <slot />
</div>
